---
import { COMBATS } from "@/consts/combats";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <section
    class="relative w-[100%] min-h-screen flex flex-col justify-start items-center !mt-28 text-center"
  >
    <h2 class="max-sm:text-3xl text-6xl text-white italic font-bold mb-24">Combates</h2>

    <div class="w-[100%] min-h-[700px] flex flex-col mx-auto mb-36">
      {
        COMBATS.map((combat) => (
          <div class="relative w-[100%] flex flex-row items-center justify-center min-h-[600px] max-sm:gap-x-24 gap-x-36 my-24">
            {/* BOXER LEFT */}
            <div class="relative flex flex-col items-center justify-center z-10">
              {/* IMAGEN-LUCHADOR */}
              <img
                aria-label={`Imagen de ${combat.fighter1}`}
                class="size-boxer rounded-2xl z-10"
                data-id={`hero-text-${combat.id}`}
                src={`/images/fighters/big/${combat.fighter1}.webp`}
                alt={`Tarjeta del boxeador ${combat.fighter1}`}
              />
              <div class="relative w-full h-auto flex justify-center items-center -top-10 z-20">
                {/* NOMBRE LUCHADOR */}
                <img
                    aria-label={`Nombre de ${combat.fighter1}`}
                    data-id={`hero-text-${combat.id}`}
                    src={`/images/fighters/names/${combat.fighter1}.webp`}
                    alt={`Nombre de ${combat.fighter1}`}
                    class="size-name mx-auto"
                />
              </div>
            </div>

            {/* VERSUS IMAGE */}
            <img
              class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[80px] h-auto z-20 pointer-events-none -rotate-12"
              src="/images/versus.webp"
              alt="Imagen de versus"
              loading="lazy"
              style="max-width: 30vw;"
            />

            {/* BOXER RIGHT */}
            <div class="relative flex flex-col items-center justify-center">
              {/* IMAGEN-LUCHADOR */}
              <img
                aria-label={`Imagen de ${combat.fighter2}`}
                class="size-boxer rounded-2xl z-10"
                data-id={`hero-text-${combat.id}`}
                src={`/images/fighters/big/${combat.fighter2}.webp`}
                alt={`Tarjeta del boxeador ${combat.fighter2}`}
              />

              <div class="relative flex flex-col items-center justify-center -top-10 z-20">
                {/* NOMBRE LUCHADOR */}
                <img
                    aria-label={`Nombre de ${combat.fighter2}`}
                    data-id={`hero-text-${combat.id}`}
                    src={`/images/fighters/names/${combat.fighter2}.webp`}
                    alt={`Nombre de ${combat.fighter2}`}
                    class="size-name mx-auto"
                />
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .size-boxer {
    width: auto;
    height: 230px;
  }
  .size-name {
    width: auto;
    height: 35px;
  }
</style>
